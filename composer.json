{
    "name": "travelmediagroup/geoip",
    "type": "library",
    "description": "A self-controlled, self-hosted GeoLocation lookup service.",
    "homepage": "http://github.com/travelmediagroup/GeoIP",
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Reherman",
            "email": "justin.reherman@travelmediagroup.com",
            "homepage": "http://github.com/j4nr6n",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "geoip2/geoip2": "~2.10"
    },
    "require-dev": {
        "internations/http-mock": "dev-master",
        "phpunit/phpunit": "~7.5",
        "squizlabs/php_codesniffer": "~3.5"
    },
    "autoload": {
        "psr-4": {
            "TravelMediaGroup\\": "src/library/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo \"Downloading the MaxMind database...\"",
            "mkdir -pm a+w db",
            "wget http://geolite.maxmind.com/download/geoip/database/GeoLite2-City.mmdb.gz -P db/ -q",
            "echo \"Extracting the MaxMind database!\"",
            "gunzip db/GeoLite2-City.mmdb.gz &> /dev/null"
        ],
        "cleanup": [
            "rm -rf vendor",
            "rm -rf db"
        ]
    }
}
